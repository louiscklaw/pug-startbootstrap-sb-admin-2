extends ./pugs_layouts/layout_charts.pug

include ./pug_inc/mixins.pug


block page_heading
    div(class="d-sm-flex align-items-center justify-content-between mb-4")
        h1.mb-0(class="h3 text-gray-800") Dashboard
        a(href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm")
            i(class="fas fa-download fa-sm text-white-50")
            span Generate Report


block page_body
        <!-- Content Row -->
        .row
            div(class="col-xl-3 col-md-6 mb-4")
                +card_3_4("border-left-primary", "text-primary", "Earnings (Monthly)", "$40,000", "fa-calendar")
            div(class="col-xl-3 col-md-6 mb-4")
                +card_3_4("border-left-success", "text-primary", "Earnings (Annual)", "$215,000", "fa-dollar-sign")
            div(class="col-xl-3 col-md-6 mb-4")
                +card_3_4("border-left-primary", "text-primary", "Tasks", "50%", "fa-clipboard-list")
            div(class="col-xl-3 col-md-6 mb-4")
                +card_3_4("border-left-primary", "text-primary", "Pending Requests", "18", "fa-comments")

        .row
            <div class="col-xl-8 col-lg-7">
                +chart1
                +chart2
            </div>
                +chart3



        <!-- Content Row -->
        <div class="row">

            <!-- Content Column -->
            <div class="col-lg-6 mb-4">

                <!-- Project Card Example -->
                +project_card

                <!-- Color System -->
                +color_system
            </div>

            <div class="col-lg-6 mb-4">

                <!-- Illustrations -->
                +illustrations

                <!-- Approach -->
                +approach

            </div>
        </div>
