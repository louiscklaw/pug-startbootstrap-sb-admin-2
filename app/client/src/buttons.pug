//- buttons.pug
extends layout.pug


mixin code_text(text)
    div.mb-2.mt-2
        code!= text


mixin circle_button_default(fa_icon, btn_class)
    //- a.btn(class!= btn_class).btn-circle(href="#")
    a.btn.btn-circle(class!= btn_class href="#")
        i.fas(class!= fa_icon)


mixin circle_button_small(fa_icon, btn_class)
    a.btn.btn-circle.btn-sm(class!= btn_class href="#")
        i.fas(class!= fa_icon)

mixin circle_button_large(fa_icon, btn_class)
    a.btn.btn-circle.btn-lg(class!= btn_class href="#")
        i.fas(class!= fa_icon)

mixin card_title(title)
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Circle Buttons</h6>
    </div>

mixin card1
    .card(class="shadow mb-4")
        +card_title("Circle Buttons")
        .card-body
            p Use Font Awesome Icons (included with this theme package) along with the circle buttons as shown in the examples below!

            <!-- Circle Buttons (Default) -->
            +code_text(".btn-circle")

            +circle_button_default("fa-facebook-f", "btn-primary")
            +circle_button_default("fa-check","btn-success")
            +circle_button_default("fa-info-circle","btn-info")
            +circle_button_default("fa-exclamation-triangle","btn-warning")
            +circle_button_default("fa-trash","btn-danger")

            <!-- Circle Buttons (Small) -->
            +code_text(".btn-circle .btn-sm")

            +circle_button_small("fa-facebook-f", "btn-primary")
            +circle_button_small("fa-check","btn-success")
            +circle_button_small("fa-info-circle","btn-info")
            +circle_button_small("fa-exclamation-triangle","btn-warning")
            +circle_button_small("fa-trash","btn-danger")


            <!-- Circle Buttons (Large) -->
            +code_text(".btn-circle .btn-lg")

            +circle_button_large("fa-facebook-f", "btn-primary")
            +circle_button_large("fa-check","btn-success")
            +circle_button_large("fa-info-circle","btn-info")
            +circle_button_large("fa-exclamation-triangle","btn-warning")
            +circle_button_large("fa-trash","btn-danger")
    </div></div>

mixin card2
            <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Brand Buttons</h6>
            </div>
            <div class="card-body">
                <p>Google and Facebook buttons are available featuring each company's respective brand color. They are used on the user login and registration pages.</p>
                <p>You can create more custom buttons by adding a new color variable in the <code>_variables.scss</code> file and then using the Bootstrap button variant mixin to create a new style, as demonstrated in the <code>_buttons.scss</code> file.</p>
                <a href="#" class="btn btn-google btn-block"><i class="fab fa-google fa-fw"></i> .btn-google</a>
                <a href="#" class="btn btn-facebook btn-block"><i class="fab fa-facebook-f fa-fw"></i> .btn-facebook</a>

            </div>
            </div>


